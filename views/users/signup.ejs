<%- layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="col-6 offset-3">Signup on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input required type="text" id="username" placeholder="Enter Username" name="username"
                        class="form-control" />
                    <div class="invalid-feedback">Please enter a Username</div>
                </div>
                  <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input required type="text" id="email" placeholder="Enter email" name="email"
                        class="form-control" />
                    <div class="invalid-feedback">Please enter a email</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input required type="password" id="password" placeholder="Enter password" name="password"
                        class="form-control" />
                    <div class="invalid-feedback">Please enter a password</div>
                </div>
                <button class="btn btn-success">Signup</button>
            </form>
        </div>
    </div>