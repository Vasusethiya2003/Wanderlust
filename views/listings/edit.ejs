<%- layout("layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-3">Edit Your Listing</h3>

    <form novalidate class="needs-validation" method="POST" enctype="multipart/form-data" action="/listings/<%= listing._id %>?_method=PUT">
      
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input required type="text" id="title" class="form-control" 
               value="<%= listing.title %>" 
               placeholder="Enter title" 
               name="listing[title]">
        <div class="invalid-feedback">Please enter a title.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea required id="description" class="form-control" 
                  name="listing[description]" 
                  placeholder="Enter description"><%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter a description.</div>
      </div>
      <div>
        <b><h3><u>Original Listing image :</u> </h3></b><br>
        <img src="<%=originalImageUrl%>" alt="">
      </div>
      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" id="image" class="form-control" 
               name="listing[image]"/>
      </div>

      <!-- Price & Country -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input required type="number" id="price" class="form-control" 
                 value="<%= listing.price %>" 
                 placeholder="Enter price" 
                 name="listing[price]">
          <div class="invalid-feedback">Please enter a price.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input required type="text" id="country" class="form-control" 
                 value="<%= listing.country %>" 
                 placeholder="Enter country" 
                 name="listing[country]">
          <div class="invalid-feedback">Please enter a country.</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input required type="text" id="location" class="form-control" 
               value="<%= listing.location %>" 
               placeholder="Enter location" 
               name="listing[location]">
        <div class="invalid-feedback">Please enter a location.</div>
      </div>

      <!-- Submit Button -->
      <button class="mt-3 btn btn-dark add-btn">Update</button>
      <br><br>
    </form>
  </div>
</div>
